<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/textview_second_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002" />

    <TextView
        android:layout_margin="14dp"
        android:textSize="20dp"
        android:id="@+id/textview_second_ultima_atualizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second_nome"
        android:textAlignment="center"/>

    <TextView
        android:layout_margin="14dp"
        android:textSize="20dp"
        android:id="@+id/textview_second_casos_ativos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second_ultima_atualizacao"
        android:textAlignment="center"/>

    <TextView
        android:layout_margin="14dp"
        android:textSize="20dp"
        android:id="@+id/textview_second_novos_casos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second_casos_ativos"
        android:textAlignment="center"/>

    <TextView
        android:layout_margin="14dp"
        android:textSize="20dp"
        android:id="@+id/textview_second_novas_mortes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second_novos_casos"
        android:textAlignment="center"/>

    <TextView
        android:layout_margin="14dp"
        android:textSize="20dp"
        android:id="@+id/textview_second_casos_totais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second_novas_mortes"
        android:textAlignment="center"/>

    <TextView
        android:layout_margin="14dp"
        android:textSize="20dp"
        android:id="@+id/textview_second_mortes_totais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second_casos_totais"
        android:textAlignment="center"/>

    <TextView
        android:layout_margin="14dp"
        android:textSize="20dp"
        android:id="@+id/textview_second_recuperados_totais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second_mortes_totais"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>